{
    "name": "XYETPO",
    "version": "1.0.0",
    "manifest_version": 3,
    "description": "Presents the Moscow metro stations in a huyman readable format.",
    "author": "Tikhon Petrishchev & Artur Khazbulatov",
    "permissions": ["webRequest", "webNavigation"],
    "host_permissions": ["https://*.yandex.ru/metro/*"],
    "content_scripts": [
        {
            "matches": ["https://*.yandex.ru/metro/*"],
            "all_frames": true,
            "js": ["content_script.js"],
            "run_at": "document_end"
        }
    ],
    "web_accessible_resources": [
        {
            "resources": [ "stations_data.json" ],
            "matches": [ "https://*.yandex.ru/*" ]
        }
    ],
    "background": {
        "service_worker": "background.js"
    },
    "icons": {
        "16": "icons/16.png",
        "32": "icons/32.png",
        "48": "icons/48.png",
        "128": "icons/128.png"
    }
}
